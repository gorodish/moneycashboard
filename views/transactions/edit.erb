<h1>Edit a Transaction</h1>

<form action="/transactions/<%= @transaction.id %>" method="post">
 <label>
 Merchant
   <input type="text" name="merchant" value="<%= @transaction.merchant %>" >
 </label>

 <label>
 Amount:
   <input type="text" name="amount" value="<%= @transaction.amount %>">
 </label>

 <label>
 Date:
   <input type="text" name="tran_date" value="<%= @transaction.tran_date %>">
 </label>

 <label>Select a tag:
   <select name="tag">
     <option value="Groceries" <%= "selected" if @transaction.tag == "Groceries" %>>Groceries</option>
     <option value="Electronics" <%= "selected" if @transaction.tag == "Electronics" %>>Electronics</option>
     <option value="Clothing" <%= "selected" if @transaction.tag == "Clothing" %>Clothing</option>
     <option value="Health" <%= "selected" if @transaction.tag == "Health" %>Health</option>
   </select>
 </label>

 <input type='submit' value="Update">
</form>